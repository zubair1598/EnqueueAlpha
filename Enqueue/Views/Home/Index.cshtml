<div class="jumbotron">
    <h1>ASP.NET</h1>
    <p class="lead">ASP.NET is a free web framework for building great Web sites and Web applications using HTML, CSS, and JavaScript.</p>
    <p><a href="http://asp.net" class="btn btn-primary btn-lg">Learn more &raquo;</a></p>
</div>
<div class="row">
    <div class="col-md-4">
        <form id="registerform">            
            Name:<input id="username" type="text" /> <br />
            Password:<input id="password" type="password" /> <br />
            FullName:<input id="fullname" type="text" /> <br />
            Email:<input id="email" type="text" /> <br />
            Phone:<input id="phone" type="text" /> <br />
            Web User:<input id="webuser" type="checkbox" /> <br />
            <button id="submitbtn" type="submit">Save</button>
        </form>
    </div>
    <div class="col-md-4">
        <form id="loginform">
            Name:<input id="login_username" type="text" /> <br />
            Password:<input id="login_password" type="password" /> <br />          
            <button id="loginbtn" type="submit">Save</button>
        </form>
    </div>
    <div class="col-md-4">
        <h2>Web Hosting</h2>
        <p>You can easily find a web hosting company that offers the right mix of features and price for your applications.</p>
        <p><a class="btn btn-default" href="http://go.microsoft.com/fwlink/?LinkId=301872">Learn more &raquo;</a></p>
    </div>
</div>
<script type="text/javascript">
    var basePath = window.location.protocol + "//" + window.location.host + "/";
    $("#registerform").submit(function () {
        Register();
    });
    function Register() {
        jQuery.support.cors = true;
        var consumer = {
            UserName: $('#username').val(),
            Password: $('#password').val(),
            FullName: $('#fullname').val(),
            Email: $('#email').val(),
            Phone: $('#phone').val(),
            WebUser: true
        };

        $.ajax({
            url: basePath+'/api/consumer/register',
            type: 'POST',
            data: JSON.stringify(consumer),
            contentType: "application/json;charset=utf-8",
            success: function (data) {
                alert('welcome ' + consumer.FullName);
            },
            error: function (x, y, z) {
                alert(x + '\n' + y + '\n' + z);
            }
        });
    }

    $("#loginform").submit(function () {
        Login();
    });
    function Login() {
        jQuery.support.cors = true;
        var login = {
            UserName: $('#login_username').val(),
            Password: $('#login_password').val()
            
        };

        $.ajax({
            url: basePath+'/api/consumer/login',
            type: 'POST',
            data: JSON.stringify(login),
            contentType: "application/json;charset=utf-8",
            success: function (data) {
                alert('welcome ' + data);
            },
            error: function (x, y, z) {
                alert(x + '\n' + y + '\n' + z);
            }
        });
    }
</script>